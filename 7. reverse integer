class Solution:
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """

        
        sign=1 if x>0 else -1
        x=abs(x) #change to positive
        
        ans=0
        while(x!=0):
            ans=ans*10+x%10
            x=int(x/10)
        
        ans=sign*ans #change back
        if ans<-2**31 or ans>2**31-1: #check overflow
            return 0
        
        return ans
            
            
