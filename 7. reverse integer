class Solution:
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """

        
        sign=1 if x>0 else -1
        x=abs(x) #change to positive
        
        ans=sign*int(str(x)[::-1])
        
        if ans>2**31-1 or ans<-2**31:
            return 0
        
        return ans
            
            
